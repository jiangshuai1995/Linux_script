[Unit]
Description=The NGINX HTTP and reverse proxy server
After=syslog.target network-online.target remote-fs.target nss-lookup.target
Wants=network-online.target

[Service]
Type=forking
PIDFile=/opt/clouddata/modules/nginx/nginx.pid
ExecStartPre=/opt/clouddata/modules/nginx/sbin/nginx -t
ExecStart=/opt/clouddata/modules/nginx/sbin/nginx
ExecReload=/opt/clouddata/modules/nginx/sbin/nginx -s reload
ExecStop=/bin/kill -s QUIT $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target