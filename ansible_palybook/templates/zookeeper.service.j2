[Unit]
Description=zookeeper.service
After=network.target

[Service]
User=root
Type=forking
ExecStart=/usr/bin/bash /opt/clouddata/modules/{{kafka_dir}}/bin/zookeeper-server-start.sh -daemon /opt/clouddata/modules/{{kafka_dir}}/config/zookeeper.properties
ExecStop=/usr/bin/bash /opt/clouddata/modules/{{kafka_dir}}/bin/zookeeper-server-stop.sh
ExecReload=$ExecStop;$ExecStart
LimitCORE=infinity
LimitNOFILE=10240
LimitNPROC=10240

[Install]
WantedBy=multi-user.target